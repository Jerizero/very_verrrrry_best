<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Verybests

    <a data-toggle="collapse" href="#dish_verybests_new_form">
      Add verybest
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @dish.verybests.each do |verybest| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to verybest, verybest %>

        <%= link_to verybest, method: :delete, data: { confirm: "Do you really want to delete this verybest" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="dish_verybests_new_form">
        <%= render partial: "dishes/dish_verybests_new_form" %>
      </div>
    </div>

  </ul>
</div>
