<div class="card mb-3">
  <h2 class="card-header h4">
    Verybest #<%= verybest.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Dish</dt>
      <dd>
        <% if @verybest.dish.present? %>
          <%= link_to verybest.dish, verybest.dish %>
        <% end %>
      </dd>

      <dt>Venue</dt>
      <dd>
        <% if @verybest.venue.present? %>
          <%= link_to verybest.venue, verybest.venue %>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @verybest.user.present? %>
          <%= link_to verybest.user, verybest.user %>
        <% end %>
      </dd>

      <dt>Notes</dt>
      <dd><%= verybest.notes %></dd>

      <dt>Timestamp</dt>
      <dd><%= verybest.timestamp %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back verybest, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_verybest_url(verybest), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to verybest, method: :delete, data: { confirm: "Do you really want to delete this verybest?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(verybest.updated_at) %> ago
  </div>
</div>
